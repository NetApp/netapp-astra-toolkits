apiVersion: management.astra.netapp.io/v1alpha1
kind: ExecHook
metadata:
  name: {{ name }}
  namespace: neptune-system
spec:
  action: {{ action }}
  applicationRef: {{ appName }}
{%- if arguments %}
  arguments:
{{ arguments }}{% endif %}
  enabled: true
{%- if matchingCriteria %}
  hookSource: {{ hookSource }}
  matchingCriteria:
{{ matchingCriteria }}{% endif %}
  stage: {{ stage }}

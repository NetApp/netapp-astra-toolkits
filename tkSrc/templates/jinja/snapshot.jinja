apiVersion: astra.netapp.io/v1
kind: Snapshot
metadata:
{%- if name %}
  name: {{ name }}
{%- elif generateName %}
  generateName: {{ generateName }}
{%- endif %}
  namespace: neptune-system
spec:
  applicationRef: {{ appName }}
  appVaultRef: {{ appVaultName }}
{%- if reclaimPolicy %}
  reclaimPolicy: {{ reclaimPolicy }}
{%- endif %}
{%- if createdTimeout %}
  volumeSnapshotsCreatedTimeout: {{ createdTimeout }}m
{%- endif %}
{%- if readyToUseTimeout %}
  volumeSnapshotsReadyToUseTimeout: {{ readyToUseTimeout }}m
{%- endif %}
